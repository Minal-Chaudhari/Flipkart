<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Flipkart Suite">

    <test name="Flipkart Login Test">
        <groups>
            <run>
                <include name="Smoke"/>        <!-- Include Smoke group -->
                <include name="LoginTests"/>   <!-- Include LoginTests group -->
            </run>
        </groups>
        <classes>
            <class name="com.flipkart.tests.LoginPageTests"/> <!-- Reference to LoginPageTests class -->
        </classes>
    </test>

</suite>
